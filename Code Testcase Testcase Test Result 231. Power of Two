class Solution {
    public boolean isPowerOfTwo(int n) {
        return binaryCheck(n);
    }
    private boolean bruteForce(int n) {
        if (n == 0) return false;
        while (n % 2 == 0) {
            n /= 2;
        }
        return n == 1;
    }
    private boolean binaryCheck(int n) {
        if (n <= 0) return false;
        long x = (long) n;
        return (x & (x - 1)) == 0;
    }
}
